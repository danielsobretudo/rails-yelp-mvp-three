<div class="container">
  <h1>Restaurants#show</h1>
  <h3><%= @restaurant.name %></h3>
  <p>Address: <%= @restaurant.address %></p>
  <p>Phone Number: <%= @restaurant.phone_number.nil? ? "Unavailable" : @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category.capitalize %></p>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <% review.rating.times do %>⭐️<% end %>
      <%= review.content %></li>
  <% end %>
</ul>

</div>

